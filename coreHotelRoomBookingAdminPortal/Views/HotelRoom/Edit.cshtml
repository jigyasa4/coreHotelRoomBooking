@model coreHotelRoomBookingAdminPortal.Models.HotelRoom
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit" asp-controller="HotelRoom">
    <div class="form-group">
        <label asp-for="RoomId">RoomId</label>
        <input type="text" asp-for="RoomId" class="form-control" placeholder="Enter Room Id" />
    </div>
    <div class="form-group">
        <label asp-for="RoomType">RoomType</label>
        <input type="text" asp-for="RoomType" class="form-control" placeholder="Enter Room Type" />
    </div>
    <div class="form-group">
        <label asp-for="RoomPrice">RoomPrice</label>
        <input type="text" asp-for="RoomPrice" class="form-control" placeholder="Enter Room Price" />
    </div>
    <div class="form-group">
    <label asp-for="RoomDescription">RoomDescription</label>
    <input type="text" asp-for="RoomDescription" class="form-control" placeholder="Enter Room Description" />
    </div>
    <div class="form-group">
    <label asp-for="RoomImage">RoomImage</label>
    <input type="text" asp-for="RoomImage" class="form-control" placeholder="Enter Room Image" />
    </div>
    <div class="form-group">
        <label asp-for="HotelId"></label>
        <select asp-for="HotelId" asp-items="ViewBag.hotels"></select>
    </div>
    <input type="submit" value="Edit Hotel Room"  class="btn btn-primary" />



</form>