@model coreHotelRoomBookingAdminPortal.Models.RoomFacility
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit" asp-controller="RoomFacility">
    <div class="form-group">
        <label asp-for="IsAvailable">IsAvailable</label>
        <input type="text" asp-for="IsAvailable" class="form-control" placeholder="Enter IsAvailable" />
    </div>
    <div class="form-group">
        <label asp-for="Wifi">Wifi</label>
        <input type="text" asp-for="Wifi" class="form-control" placeholder="Enter Wifi" />
    </div>
    <div class="form-group">
        <label asp-for="AirConditioner"></label>
        <input type="text" asp-for="AirConditioner" class="form-control" placeholder="Enter AirConditioner" />
    </div>
    <div class="form-group">
        <label asp-for="Refrigerator"></label>
        <input type="text" asp-for="Refrigerator" class="form-control" placeholder="Enter Refrigerator" />
    </div>
    <div class="form-group">
    <label asp-for="RoomFacilityDescription"></label>
    <input type="text" asp-for="RoomFacilityDescription" class="form-control" placeholder="Enter RoomFacilityDescription" />
    </div>
    <div class="form-group">
        <label asp-for="RoomId"></label>
        <select asp-for="RoomId" asp-items="ViewBag.hotelrooms"></select>
    </div>
    <input type="submit" value="Edit Room Facility" />


    <br />
</form>

