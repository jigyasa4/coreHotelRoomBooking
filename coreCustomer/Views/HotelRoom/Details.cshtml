    <section class="jumbotron text-center">
        <div id="booking" class="section">
            <div class="section-center">
                <div class="container">
                    <div class="row">
                        <div class="booking-form">

                            <form>
                                <div class="row no-margin">
                                    <div class="form-group">
                                        <span class="form-label">Search Hotel</span>
                                        <input class="form-control" type="text" name="Search" id="Search" value="@Context.Session.GetString("Search")">
                                    </div>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <div class="form-group">
                                        <span class="form-label">Check In</span>
                                        <input class="form-control" type="date" name="checkIn" id="checkIn" value="@Context.Session.GetString("CheckIn")" required>
                                    </div>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <div class="form-group">
                                        <span class="form-label">Check out</span>
                                        <input class="form-control" type="date" name="CheckOut" id="CheckOut" value="@Context.Session.GetString("CheckOut")" required>
                                    </div>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <div class="form-group">
                                        <span class="form-label">Guests</span>
                                        <select class="form-control">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                        </select>
                                        <span class="select-arrow"></span>
                                    </div>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <div class=" form-group">
                                        <br />
                                        <div class=" form-btn">
                                            <button class="btn btn-success" asp-controller="Home" asp-action="Search" type="submit">Check availability</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
  



        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                    @*ThumbnailStart*@
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img src="@item.RoomImage" class="bd-placeholder-img card-img-top">
                                <div class="card-body">
                                    <p class="card-text" style="font-weight:bold;">@item.RoomType</p>
                                    <p class="card-text">@item.RoomDescription</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">

                                            @*<button type="button" class="btn btn-sm btn-outline-secondary">Book Now</button>*@
                                            <a asp-controller="Book" asp-action="Buy" asp-route-Id="@item.RoomId" class="btn btn-sm btn-outline-secondary">Book Room</a>
                                            <a asp-controller="HotelRoom" asp-action="Details1" asp-route-Id="@item.RoomId" class="btn btn-sm btn-outline-secondary">View Details</a>
                                        </div>
                                        <small class="text-muted">9</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @*ThumbnailEnd*@
                    }
                </div>
            </div>
        </div>
    </main>

