    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @*ThumbnailStart*@
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="@item.HotelImage" class="bd-placeholder-img card-img-top" width="100" height="200">
                            <div class="card-body">
                                <p class="card-text" style="font-weight:bold;">@item.HotelName</p>
                                <p class="card-text">@item.HotelDescription</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        @*<button type="button" class="btn btn-sm btn-outline-secondary"></button>*@
                                        <a asp-controller="HotelRoom" asp-action="Details" asp-route-Id="@item.HotelId" class="btn-btn-sm btn-outline-secondary">Book Now</a>&nbsp;&nbsp;&nbsp;&nbsp;
                                        <a asp-controller="Home" asp-action="Details" asp-route-Id="@item.HotelId" class="btn-btn-sm btn-outline-secondary">Hotel Details </a>
                                    </div>
                                    <small class="text-muted"></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*ThumbnailEnd*@

                }

            </div>
        </div>
    </div>
