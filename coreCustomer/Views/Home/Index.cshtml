@model IEnumerable<coreCustomer.Models.Hotels>


@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@*<h2>User Home Page</h2>*@

<main role="main">
    <section class="jumbotron text-center">
        <div id="booking" class="section">
            <div class="section-center">
                <div class="container">
                    <div class="row">
                        <div class="booking-form">

                            <form>
                                <div class="row no-margin">
                                    <div class="form-group">
                                        <span class="form-label">Search Hotel</span>
                                        <input class="form-control" type="text" name="Search" id="Search" placeholder="Search" aria-label="Search">
                                    </div>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <div class="form-group">
                                        <span class="form-label">Check In</span>
                                        <input class="form-control" type="date" name="checkIn" id="checkIn" value="@ViewBag.CheckIn" required>
                                    </div>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <div class="form-group">
                                        <span class="form-label">Check out</span>
                                        <input class="form-control" type="date" name="CheckOut" id="CheckOut" value="@ViewBag.CheckOut" required>
                                    </div>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <div class="form-group">
                                        <span class="form-label">Guests</span>
                                        <select class="form-control">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                        </select>
                                        <span class="select-arrow"></span>
                                    </div>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <div class=" form-group">
                                        <br />
                                        <div class=" form-btn">
                                            <button class="btn btn-success" asp-controller="Home" asp-action="Search" type="submit">Check availability</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
