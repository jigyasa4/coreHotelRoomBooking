

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Booking Page</h2>
<table class="table table-hover">
    <tr>
        <th>Options</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>

    @foreach (var item in ViewBag.book)
    {
       <tr>
        <td><a asp-controller="Book" asp-action="remove" asp-route-id="@item.HotelRooms.RoomId">Remove</a></td>
        <td>@item.HotelRooms.RoomId</td>
        <td>@item.HotelRooms.RoomType</td>
        <td><img src="@item.HotelRooms.RoomImage" width="60" /></td>
        <td>@item.HotelRooms.RoomDescription</td>
        <td>@item.HotelRooms.RoomPrice</td>
        <td>@item.Quantity</td>
        <td>@(item.HotelRooms.RoomPrice * item.Quantity)</td>
        </tr>
    }

    <tr>
    <td align="right" colspan="7">Sum</td>
    <td>
    @ViewBag.total
        </td>
        </tr>
    </table>

<br />


<a asp-controller="Home" asp-action="index">Continue Booking</a>
<a asp-controller="Customer" asp-action="Index">Checkout</a>



