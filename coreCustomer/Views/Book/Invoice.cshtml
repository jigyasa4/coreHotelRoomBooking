
@{
    ViewData["Title"] = "Invoice";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Invoice</h2>

<div class="container">
    <div class="card">
        <div class="card-header">
            Invoice
            <strong>
                <p id="demo"></p>

                <script>
var d = new Date();
document.getElementById("demo").innerHTML = d;
                </script>
            </strong>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h6 class="mb-3">From:</h6>
                    <div>
                        <strong></strong>
                    </div>
                    <div>Madalinskiego 8</div>
                    <div>71-101 Szczecin, Poland</div>
                    <div>Email: info@webz.com.pl</div>
                    <div>Phone: +48 444 666 3333</div>
                </div>
                <div class="col-sm-6">
                    <h6 class="mb-3">Address:</h6>
                    <div>
                        <strong>@ViewBag.Customers.FirstName</strong>
                    </div>
                    <div>@ViewBag.Customers.Address</div>
                    <div>@ViewBag.Customers.State</div>
                    <div>Email: @ViewBag.Customers.EmailId</div>
                    <div>Phone: @ViewBag.Customers.ContactNumber</div>
                </div>
            </div>
            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            @*<th class="center">#</th>*@
                            <th>Room Id</th>
                            <th class="right">Unit Cost</th>
                            <th class="center">Quantity</th>
                            <th class="right">Total</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in ViewBag.book)
                        {
                            <tr>
                                <td>@item.HotelRooms.RoomId</td>
                                @*<td>@item.HotelRooms.RoomType</td>*@
                                <td>@item.HotelRooms.RoomPrice</td>
                                <td>@item.Quantity</td>
                                <td>@(item.HotelRooms.RoomPrice * item.Quantity)</td>
                            </tr>
                        }

                        @*<tr>
                                <td class="center">4</td>
                                <td class="left">Platinum Support</td>
                                <td class="left">1 year subcription 24/7</td>
                                <td class="right">$3.999,00</td>
                                <td class="center">1</td>
                                <td class="right">$3.999,00</td>
                            </tr>*@
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-5">
                </div>
                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            @*<tr>
                                    <td class="left">
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td class="right">@ViewBag.total</td>
                                </tr>
                                <tr>
                                    <td class="left">
                                        <strong>Discount (20%)</strong>
                                    </td>
                                    <td class="right">$1,699,40</td>
                                </tr>
                                <tr>
                                    <td class="left">
                                        <strong>VAT (10%)</strong>
                                    </td>
                                    <td class="right">$679,76</td>
                                </tr>*@
                            <tr>
                                <td class="left">
                                    <strong>Total</strong>
                                </td>
                                <td class="right">
                                    <strong>@ViewBag.total</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>