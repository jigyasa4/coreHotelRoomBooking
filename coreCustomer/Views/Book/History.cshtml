
@{
    ViewData["Title"] = "History";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>History</h2>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @*ThumbnailStart*@
            @foreach (var item in ViewBag.HotelRoom)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@item.RoomImage" class="bd-placeholder-img card-img-top">
                        <div class="card-body">
                            <p class="card-text" style="font-weight:bold;">@item.RoomType</p>
                            <p class="card-text">@item.RoomDescription</p>
                            <div class="d-flex justify-content-between align-items-center">
                                @*<div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">View Details</button>
                                       <button type="button" class="btn btn-sm btn-outline-secondary">Book Now</button>
                                    </div>*@
                                <a asp-controller="Book" asp-action="Buy" asp-route-Id="@item.RoomId" class="btn btn-sm btn-outline-secondary">Book Room</a>
                                <a asp-controller="HotelRoom" asp-action="Details1" asp-route-Id="@item.RoomId" class="btn btn-sm btn-outline-secondary">View Details</a>

                                <small class="text-muted">9</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @*ThumbnailEnd*@

        </div>
    </div>
</div>
</main>